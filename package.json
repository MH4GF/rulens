{
  "name": "rulens",
  "version": "0.1.0",
  "description": "CLI to extract and format linting rules into Markdown for documentation and AI agents",
  "author": "MH4GF",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist", "LICENSE"],
  "bin": {
    "rulens": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "pnpm run lint:biome && pnpm run lint:eslint && pnpm run lint:tsc",
    "lint:biome": "biome check .",
    "lint:eslint": "pnpm --filter @mh4gf/configs lint:eslint",
    "lint:tsc": "tsc --noEmit",
    "fmt": "pnpm run fmt:biome",
    "fmt:biome": "biome check --write --unsafe ."
  },
  "dependencies": {
    "commander": "^13.1.0",
    "execa": "^9.5.2",
    "picocolors": "^1.1.1",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@mh4gf/configs": "^0.4.5",
    "@mh4gf/eslint-config": "^0.6.8",
    "@types/node": "^22.15.3",
    "@vitest/coverage-v8": "^3.1.2",
    "eslint": "^9.26.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.2"
  },
  "packageManager": "pnpm@10.10.0+sha512.d615db246fe70f25dcfea6d8d73dee782ce23e2245e3c4f6f888249fb568149318637dca73c2c5c8ef2a4ca0d5657fb9567188bfab47f566d1ee6ce987815c39"
}
