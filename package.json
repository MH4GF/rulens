{
  "name": "rulens",
  "version": "0.1.0",
  "description": "CLI to extract and format linting rules into Markdown for documentation and AI agents",
  "license": "MIT",
  "author": "MH4GF",
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "rulens": "./dist/index.js"
  },
  "dependencies": {
    "commander": "13.1.0",
    "execa": "9.5.2",
    "picocolors": "1.1.1",
    "valibot": "1.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@mh4gf/configs": "0.4.6",
    "@mh4gf/eslint-config": "0.6.9",
    "@tsconfig/strictest": "2.0.5",
    "@types/node": "22.15.3",
    "@vitest/coverage-v8": "3.1.2",
    "eslint": "9.26.0",
    "knip": "5.53.0",
    "syncpack": "13.0.4",
    "tsup": "8.4.0",
    "typescript": "5.8.3",
    "vitest": "3.1.2"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "fmt": "pnpm run fmt:syncpack-fix && pnpm run fmt:syncpack-format && pnpm run fmt:biome",
    "fmt:biome": "biome check --write --unsafe . --log-level=warn",
    "fmt:knip": "knip --fix",
    "fmt:syncpack-fix": "syncpack fix-mismatches",
    "fmt:syncpack-format": "syncpack format",
    "lint": "pnpm run lint:biome && pnpm run lint:tsc && pnpm run lint:syncpack",
    "lint:biome": "biome check . --log-level=warn",
    "lint:eslint": "eslint .",
    "lint:knip": "knip",
    "lint:syncpack": "syncpack lint",
    "lint:tsc": "tsc --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "packageManager": "pnpm@10.10.0+sha512.d615db246fe70f25dcfea6d8d73dee782ce23e2245e3c4f6f888249fb568149318637dca73c2c5c8ef2a4ca0d5657fb9567188bfab47f566d1ee6ce987815c39"
}
